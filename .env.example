# OpenAI Configuration (Optional - for AI features)
OPENAI_ORGANIZATION=your_org_id_here
OPENAI_API_KEY=your_openai_api_key_here

# Papr Memory API Configuration (Required)
PAPR_MEMORY_API_KEY=your_papr_api_key_here
PAPR_BASE_URL=https://api.papr.ai
NEXT_PUBLIC_MEMORY_SERVER_URL=https://api.papr.ai

# Debugging and Logging (Optional)
PAPR_LOG=info
PAPR_LOG_FILE=logs

# On-Device Processing Configuration (Optional - defaults to false)
# Set to true to enable local embedding generation and storage
PAPR_ONDEVICE_PROCESSING=false
PAPR_MAX_TIER0=30
PAPR_SYNC_INTERVAL=30

# Skip server-side processing entirely (Optional - defaults to false)
# Only use if you want purely local processing with no server sync
PAPR_ONDEVICE_ONLY=false

# Core ML Configuration (Optional - Recommended for Apple Silicon)
# Enable CoreML for faster embeddings on Mac with Apple Silicon
PAPR_ENABLE_COREML=false
# Path to pre-converted CoreML model (auto-downloads from HuggingFace if not specified)
# PAPR_COREML_MODEL=/path/to/your/model.mlpackage

# System Configuration (Optional)
PYTHONPATH=src:$PYTHONPATH
TOKENIZERS_PARALLELISM=false

# Hugging Face Token (Optional - for downloading models)
# HUGGINGFACE_HUB_TOKEN=your_hf_token_here
